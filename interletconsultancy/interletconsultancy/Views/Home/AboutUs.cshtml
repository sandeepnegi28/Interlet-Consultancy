        .custom-container {
            width: 1600px;
        }
    }


    #slider {
        overflow: hidden;
    }

        #slider figure {
            position: relative;
            width: 500%;
            margin: 0;
            left: 0;
            animation: 20s slider infinite;
        }

            #slider figure img {
                width: 20%;
                float: left;
            }

    @@keyframes slider {
        0% {
            left: 0;
        }

        20% {
            left: 0;
        }

        25% {
            left: -100%;
        }

        45% {
            left: -100%;
        }

        50% {
            left: -200%;
        }

        70% {
            left: -200%;
        }

        75% {
            left: -300%;
        }

        95% {
            left: -300%;
        }

        100% {
            left: -400%;
        }
    }


    .container-full {
        width: 100%;
        margin: 0 auto;
        overflow: hidden;
    }

    .background-color-fff {
        background-color: #fff;
    }

    .text-center {
        text-align: center !important;
    }

    .font-bold {
        font-family: DINNextLTPro-Bold !important;
    }

    .title-text > h1, h2, h3, h4, h5, h6 {
        margin: 0;
    }

    .h3, h3 {
        font-size: 1.75rem;
    }

    .margin-top-3-percent {
        margin-top: 3%;
    }


</style>

