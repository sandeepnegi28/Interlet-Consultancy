<style>
    .custom-container {
        width: 100%;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
    }

    @@media all and (min-width: 576px) {
        .custom-container {
            width: 540px;
        }
    }

    @@media all and (min-width: 768px) {
        .custom-container {
            width: 750px;
