    }

    @@media all and (min-width: 992px) {
        .custom-container {
            width: 970px;
        }
    }

    @@media all and (min-width: 1200px) {
        .custom-container {
            width: 1040px;
        }
    }

    /* Custom break point*/

    @@media all and (min-width: 1600px) {
        .custom-container {
            width: 1400px;
        }
    }

